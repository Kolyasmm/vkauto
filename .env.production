# Production Environment Variables
# Скопируйте этот файл в .env на сервере и заполните значения

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=ИЗМЕНИТЕ_НА_СИЛЬНЫЙ_ПАРОЛЬ
POSTGRES_DB=vk_automation
DATABASE_URL=postgresql://postgres:ИЗМЕНИТЕ_НА_СИЛЬНЫЙ_ПАРОЛЬ@postgres:5432/vk_automation?schema=public

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# VK API (получите в настройках VK Ads)
VK_ACCESS_TOKEN=ваш_vk_access_token_здесь
VK_API_VERSION=5.131
VK_AD_ACCOUNT_ID=ваш_ad_account_id

# JWT Secret (сгенерируйте случайную строку)
JWT_SECRET=ИЗМЕНИТЕ_НА_СЛУЧАЙНУЮ_СТРОКУ_МИНИМУМ_32_СИМВОЛА

# API
API_PORT=4000
API_HOST=0.0.0.0

# Frontend (замените на ваш домен)
NEXT_PUBLIC_API_URL=http://ваш-домен.ru

# Telegram Bot (опционально)
TELEGRAM_BOT_TOKEN=
TELEGRAM_NOTIFICATIONS_ENABLED=false

# Scheduler
SCHEDULER_ENABLED=true
DEFAULT_RUN_TIME=09:00

# Logging
LOG_LEVEL=info

# App
NODE_ENV=production

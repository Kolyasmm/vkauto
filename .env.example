# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/vk_automation?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# VK API (вручную вставляемые токены)
VK_ACCESS_TOKEN=your_vk_access_token_here
VK_API_VERSION=5.131

# VK Ads Account
VK_AD_ACCOUNT_ID=your_ad_account_id

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# API
API_PORT=4000
API_HOST=localhost

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:4000

# Telegram Bot (для уведомлений)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_NOTIFICATIONS_ENABLED=false

# Scheduler
SCHEDULER_ENABLED=true
DEFAULT_RUN_TIME=09:00

# Logging
LOG_LEVEL=info

# App
NODE_ENV=development
